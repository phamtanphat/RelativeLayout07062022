<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_red"
        android:background="#f20"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:text="Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/text_view_red"
        android:id="@+id/text_view_green"
        android:background="#6AFF00"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:text="Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/text_view_green"
        android:id="@+id/text_view_blue"
        android:background="#001AFF"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:text="Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/text_view_blue"
        android:id="@+id/text_view_orange"
        android:background="#FF9800"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:text="Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/text_view_orange"
        android:id="@+id/text_view_gray"
        android:background="#B8B8B8"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:text="Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/text_view_gray"
        android:id="@+id/text_view_pink"
        android:background="#D657DA"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:text="Pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
